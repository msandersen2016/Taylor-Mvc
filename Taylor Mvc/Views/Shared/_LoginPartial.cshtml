@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-dark navbar-right mr-auto">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index ", " Manage ", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{

    <ul class="nav navbar-nav navbar-dark navbar-right mr-auto">
        <li class="nav-item alert-dark navbar-right"><a href="/Account/Register" id="registerLink" class="nav-link">Register</a></li>
        <li class="nav-item alert-dark navbar-right"><a href="/Account/Login" id="loginLink" class="nav-link">Log in</a></li>
    </ul>
}
