@if (Session["emailAddress"] == null)
{
    <ul class="nav navbar-nav navbar-dark navbar-right mr-auto">
        <li class="nav-item navbar-right"><a href="/Home/RegisterStaff" id="registerLink" class="nav-link">Looking for a job?</a></li>
        <li class="nav-item navbar-right"><a href="/Home/RegisterClient" id="registerLink" class="nav-link">Looking to hire?</a></li>
        <li class="nav-item navbar-right"><a href="/Account/Login" id="loginLink" class="nav-link">Log in</a></li>
    </ul>

}
else
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="Dropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @String.Format("Hello {0}!",Session["emailAddress"])
                </a>
                <div class="dropdown-menu" aria-labelledby="Dropdown">
                    @Html.ActionLink("My Account", "MyAccount", "Account", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                    <div class="dropdown-divider"></div>
                    @Html.ActionLink("Log Off", "LogOff", "Account", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                </div>
            </li>
        </ul>
    }
}