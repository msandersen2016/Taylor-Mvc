@model IEnumerable<Taylor_Mvc.Models.ContractViewModel>

@{
    ViewBag.Title = "Contracts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ContractAction"]?.ToString() == "Deleted")
{
    <div class="alert alert-success">Contract successfully deleted</div>
}

<h2>Contracts</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryRange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
                @Html.HiddenFor(modelItem => item.ContractId)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteContract", new { id = item.ContractId })
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".alert").delay(3000).fadeOut(300);
        })
    </script>

}