@model Taylor_Mvc.Models.AllStaffSelectionViewModel

@{
    ViewBag.Title = "People";
}

<h2>New Staffing Request</h2>
@if (TempData["SubmitStaffSuccess"]?.ToString() == "success")
{
    <div class="alert alert-success">Request Submitted. You'll receive a response
     within 24 hours.</div>
}
@if (TempData["SubmitStaffSuccess"]?.ToString() == "failure")
{
    <div class="alert alert-danger">Something Went Wrong :(</div>
}
@if (TempData["SubmitStaffSuccess"]?.ToString() == "noneSelected")
{
    <div class="alert alert-info">You must select at least one staff</div>
}
@using (Html.BeginForm("SubmitStaffingRequest", "Contracts", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    <table class="table">
        <tr>
            <th>
                Select
            </th>
            <th>
                Name
            </th>
            @*<th>
            Skills
        </th>*@
            <th>
                Experience
            </th>
            <th>
                Education
            </th>
            <th>
                Salary
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
        @Html.EditorFor(model => model.Staff)
    </table>
    <hr />
    <br />
    <input type="submit" name="operation" id="submit" value="Submit Selected" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".alert").delay(3000).fadeOut(300);
        })
    </script>

}

